Bootstrap: localimage
From: /gpfs01/Q0195/containers/ubuntu-20.04.sif

%runscript
exec "$@"

%post
cd /opt &&  \
apt-get update  &&  \
apt-get install -y gcc make samtools zlib1g-dev  &&  \
apt-get clean  &&  apt-get purge  &&  rm -rf /var/lib/apt/lists/*  &&  \
wget https://github.com/c-zhou/yahs/archive/refs/tags/v1.1.tar.gz  &&  \
tar xf v1.1.tar.gz  &&  rm -f v1.1.tar.gz  &&  cd yahs-1.1  &&  make

%environment
export PATH="/opt/yahs-1.1:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"

