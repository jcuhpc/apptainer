Bootstrap: docker
From: ubuntu:22.04

%labels
Maintainer JCUHPC

%files
vmd-1.9.3.tar /opt
# Register required for download.

%runscript
exec "$@"

%post
install -d -m 2775 -o root -g root /gpfs01
install -d -m 1777 -o root -g root /scratch /fast/tmp

apt-get update
DEBIAN_FRONTEND=noninteractive TZ=Australia/Brisbane  apt-get install -y tzdata
apt-get install -y --no-install-recommends software-properties-common
apt-get install -y apt-utils tar
cd /opt
tar xf vmd-1.9.3.tar
rm -f vmd-1.9.3.tar

%environment
    export PATH="/opt/vmd/1.9.3/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"

