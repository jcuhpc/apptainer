Bootstrap: docker
From: ubuntu:22.04

%labels
Maintainer JCUHPC

%runscript
exec "$@"

%post
install -d -m 2775 -o root -g root /gpfs01
install -d -m 1777 -o root -g root /scratch /fast/tmp

apt-get update
DEBIAN_FRONTEND=noninteractive TZ=Australia/Brisbane  apt-get install -y tzdata
apt-get install -y --no-install-recommends software-properties-common
apt-get install -y build-essential wget bzip2 ca-certificates libglib2.0-0 libxext6 libsm6 libxrender1 git apt-utils
apt-get install -y vsearch 
apt-get clean   &&   apt-get purge   &&   rm -rf /var/lib/apt/lists/*

