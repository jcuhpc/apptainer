Bootstrap: localimage
From: /gpfs01/Q0195/containers/mamba-23.04.sif

%runscript
exec "$@"

%post
apt-get update  &&  \
export PATH="/opt/conda/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"  &&  \
mamba create -c conda-forge -c bioconda -c defaults -n repeatscout repeatscout=1.0.6  &&  \
. /opt/conda/etc/profile.d/conda.sh

%environment
    export PATH="/opt/conda/envs/repeatscout/bin:/opt/conda/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"

