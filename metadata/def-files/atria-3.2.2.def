Bootstrap: localimage
From: /gpfs01/Q0195/containers/ubuntu-22.04.sif

%runscript
exec "$@"

%post
cd /opt  &&  \
VERS=4.0.3  &&  \
apt-get update  &&  \
apt install pigz pbzip2  &&  \
wget https://github.com/cihga39871/Atria/releases/download/v$VERS/atria-$VERS-linux.tar.gz  &&  \
tar -zxf atria-$VERS-linux.tar.gz  &&  rm atria-$VERS-linux.tar.gz  &&  \
apt-get clean  &&  apt-get purge  &&  rm -rf /var/lib/apt/lists/*

%environment
export PATH="/opt/atria-$VERS-linux/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"

