Bootstrap: localimage
From: /gpfs01/Q0195/containers/mamba-24.04.sif

%runscript
exec "$@"

%post
apt-get update  &&  \
mamba create  -c conda-forge -c defaults -n scikit-learn scikit-learn=1.5.0  &&  \
. /opt/conda/etc/profile.d/conda.sh

%environment
export PATH="/opt/conda/envs/scikit-learn/bin:/opt/conda/condabin:/opt/conda/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"

