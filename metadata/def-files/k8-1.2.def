Bootstrap: localimage
From: /gpfs01/sw/containers/ubuntu-24.04.sif

%runscript
exec "$@"

%post
cd /opt  &&  \
VERS=1.2  &&  \
wget https://github.com/attractivechaos/k8/releases/download/v$VERS/k8-$VERS.tar.bz2  && \
tar xf k8-$VERS.tar.bz2  &&  rm -f *.tar.bz2  &&  \
mv k8-$VERS k8  &&  cd k8  &&  \
./k8-x86_64-Linux -e 'print(Math.log(2))'

%environment
export PATH="/opt/k8:$PATH"

