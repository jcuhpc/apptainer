Bootstrap: localimage
From: /gpfs01/sw/containers/miniforge3-25.3.1.sif

%post
mamba create --debug -c phylofisher -c defaults -n SWNAME SWNAME=SWVERS  &&  \
. /opt/conda/etc/profile.d/conda.sh  &&  \
conda activate SWNAME

%environment
export PATH="/opt/conda/envs/SWNAME/bin:/opt/conda/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"

%runscript
exec "$@"

