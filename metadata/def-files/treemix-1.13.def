Bootstrap: localimage
From: /gpfs01/Q0195/containers/mamba-23.04.sif

%runscript
exec "$@"

%post
apt-get update  &&  \
mamba create --debug -c conda-forge -c bioconda -c defaults -n treemix treemix=1.13  &&  \
. /opt/conda/etc/profile.d/conda.sh

%environment
export PATH="/opt/conda/envs/treemix/bin:/opt/conda/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"

