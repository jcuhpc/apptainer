Bootstrap: localimage
From: /gpfs01/Q0195/containers/mamba-23.04.sif

%runscript
exec "$@"

%post
apt-get update  &&  \
mamba create  -c conda-forge -c bioconda -c defaults -n admixture admixture=1.3.0  &&  \
. /opt/conda/etc/profile.d/conda.sh  &&  \
apt-get clean   &&   apt-get purge   &&   rm -rf /var/lib/apt/lists/*

%environment
    export PATH="/opt/conda/envs/admixture/bin:/opt/conda/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"

