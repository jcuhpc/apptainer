Bootstrap: localimage
From: /gpfs01/sw/containers/miniforge3-25.3.1.sif

%runscript
exec "$@"

%post
cd /opt  &&  \
VERS=5.3.6  &&  \
apt-get update  &&  \
wget https://github.com/ConesaLab/SQANTI3/archive/refs/tags/v$VERS.tar.gz  &&  \
tar xf v$VERS.tar.gz  &&  rm -f *.tar.gz  &&  \
mv SQANTI3-5.3.6 sqanti3  &&  cd sqanti3  &&  \
conda env create -f SQANTI3.conda_env.yml  &&  \
. /opt/conda/etc/profile.d/conda.sh
conda activate sqanti3

%environment
export PATH="/opt/sqanti3:/opt/conda/envs/sqanti3:$PATH"
