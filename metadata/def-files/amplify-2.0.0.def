Bootstrap: localimage
From: /gpfs01/Q0195/containers/mamba-23.04.sif

%runscript
exec "$@"

%post
apt-get update  &&  \
apt-get clean  &&  apt-get purge  &&  rm -rf /var/lib/apt/lists/*  &&  \
mamba create  -c conda-forge -c bioconda -c defaults -n amplify amplify=2.0.0  &&  \
. /opt/conda/etc/profile.d/conda.sh  &&  \

%environment
export PATH="/opt/conda/envs/amplify/bin:/opt/conda/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"

