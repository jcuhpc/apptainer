Bootstrap: localimage
From: /gpfs01/Q0195/containers/Python-3.10.sif

%runscript
exec "$@"

%post
cd /opt  &&  \
apt-get update  &&  \
apt-get install -y bedtools samtools  &&  \
apt-get install -y gdal-bin gdal-data gdal-plugins libbz2-dev libffi8 libffi-dev libgeos-c1v5 libgdal34t64 libgdal-dev libgeos-dev libgsl27 libgsl-dev libnetcdf-dev libnetcdf19 libssl-dev openssl zlib1g zlib1g-dev  &&  \
apt-get clean  &&  apt-get purge  &&  rm -rf /var/lib/apt/lists/*  &&  \
pip3 install --upgrade pip  &&  \
pip3 install pysam numpy pandas python-intervals pyfasta scikit-learn interval mappy progressbar docopt  &&  \
VERS=2.28  &&  \
TEMP="minimap2-$VERS"  &&  FILE=$TEMP"_x64-linux"  &&  \
wget https://github.com/lh3/minimap2/releases/download/v$VERS/$FILE.tar.bz2  &&  \
tar xf $FILE.tar.bz2  &&  rm -f $FILE.tar.bz2  &&  \
mv $FILE minimap2  &&  \
VERS=0.2.4  &&  \
wget https://github.com/rrwick/Porechop/archive/refs/tags/v$VERS.tar.gz  && \
tar xf v$VERS.tar.gz  &&  rm -f v$VERS.tar.gz  &&  \
mv Porechop-$VERS Porechop  &&  \
git clone https://github.com/yangence/circfull.git  &&  \
cp /opt/circfull/script/bin/adapters.py /opt/Porechop/adapters.py  &&  \
cd Porechop  &&  make  &&  \
pip3 install circfull  &&  \
ln /usr/local/bin/python3 /usr/local/bin/python

%environment
export PATH="/opt/circfull/script:/opt/minimap2:/opt/Porechop:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"

