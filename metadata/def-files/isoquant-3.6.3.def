Bootstrap: localimage
From: /gpfs01/Q0195/containers/ubuntu-24.04.sif

%runscript
exec "$@"

%post
cd /opt  &&  \
VERS=3.6.3  &&  \
apt-get update  &&  \
apt-get install -y python3-gffutils python3-biopython python3-pandas python3-pybedtools python3-pysam python3-packaging python3-pyfaidx python3-pyyaml-env-tag python3-matplotlib python3-numpy python3-scipy python3-seaborn samtools minimap2  &&  \
apt-get clean  &&  apt-get purge  &&  rm -rf /var/lib/apt/lists/*  &&  \
wget https://github.com/ablab/IsoQuant/releases/download/v3.6.3/IsoQuant-$VERS.tar.gz  &&  \
tar xf IsoQuant-$VERS.tar.gz  &&  rm -f *.tar.gz  &&  \
mv IsoQuant-$VERS  IsoQuant

%environment
export PATH="/opt/IsoQuant:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"

